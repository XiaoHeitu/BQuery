@page "/counter"

<h1>Counter</h1>

<p id="pCur">Current count: 0</p>
<div id="test">
    <p>test</p>
</div>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private async Task IncrementCount()
    {
        for (int i = 0; i < 100; i++)
        {
            currentCount++;

            //通过ID选择器选择元素，并修改元素的InnerText
            this.XQ("#pCur").Text($"Current count: {currentCount}");

            this.XQ("#test").Find("p").Text($"Current count: {currentCount}");

            await this.XQ("#test").Find("p").TextAsync($"Current count: {currentCount}");
            
            //使代码停顿0.001 秒
            await Task.Delay(1);
        }
    }
}
